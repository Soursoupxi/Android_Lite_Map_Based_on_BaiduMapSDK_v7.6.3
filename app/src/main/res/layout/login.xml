<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="3dp"
        android:columnCount="2"
        android:rowCount="6"
        android:useDefaultMargins="true">
        <TimePicker
            android:id="@+id/myTimePicker"
            android:layout_width="wrap_content"
            android:layout_height="99dp"
            android:layout_row="0"
            android:layout_columnSpan="2">
        </TimePicker>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="账号："
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:textStyle="bold">
        </TextView>
        <EditText
            android:id="@+id/myTextLogAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:ems="10"
            android:inputType="textPersonName">
        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="密码："
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:textStyle="bold">
        </TextView>
        <EditText
            android:id="@+id/myTextLogPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:ems="10"
            android:inputType="textPassword"
            android:textSize="@dimen/abc_text_size_display_1_material">
        </EditText>
        <Button
            android:id="@+id/myButtonLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_columnSpan="2"
            android:text="登入"
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:textStyle="bold"
            android:onClick="onLoginClick">
        </Button>
        <Button
            android:id="@+id/myButtonReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_columnSpan="2"
            android:text="没有账号？点击此处注册新账号。"
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:textStyle="bold"
            android:onClick="onRegClick">
        </Button>
        <TextView
            android:layout_rowWeight="0.5"
            android:layout_row="5"
            android:layout_columnSpan="2"
            android:textSize="17sp"
            android:autoLink="web"
            android:text="Android_Lite_Map_Based_on_BaiduMapSDK_v7.6.3\n作者:Soursoupxi\n项目链接:\nhttps://github.com/Soursoupxi/Android_Lite_Map_Based_on_BaiduMapSDK_v7.6.3">
        </TextView>
    </GridLayout>
</RelativeLayout>